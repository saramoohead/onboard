<h2>Sign up to Onboard!</h2>

<%= simple_form_for @user do |form| %>

	<%= form.input :name %>
	<%= form.input :username %>
	<%= form.input :email %>
	<%= form.input :password %>
	<%= form.input :password_confirmation %>

	<%= form.button :submit %>

<% end %>

<p>
	<!-- you can put an image in where the words are, if you want. Rik said use a do. -->
	<%= link_to "Sign up with Facebook", "/auth/facebook" %>
	<%= link_to "Sign up with Twitter", "/auth/twitter" %>
	<%= link_to "Sign up with LinkedIn", "/auth/linkedin" %>
</p>